#! /usr/bin/env nix-shell
#! nix-shell -i bash -p bash

bg_dir="$HOME/.config/swww/"
img_prefix="CarNixie"
img_suffix=".png"

hyprctl notify 5 2000 0 background manager called

daytime=$(date +%H)
if ((20 <= $daytime)) && (($daytime < 24)); then
    suffix="Evening"
elif (($daytime == 24)) || (($daytime <= 5)); then
    suffix="Night"
elif ((6 <= $daytime)) && (($daytime <= 12)); then
    suffix="Morning"
else
    suffix="Afternoon"
fi

swww img "$bg_dir$img_prefix$suffix$img_suffix" -t grow
